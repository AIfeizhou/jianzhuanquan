{
  "rewrites": [
    { "source": "/api/:match*", "destination": "https://jianzhuanquan-api.vercel.app/api/:match*" }
  ],
  "routes": [
    { "src": "/(.*)\.(css|js|map|json|png|jpg|jpeg|gif|webp|svg|ico|txt)$", "dest": "/$1.$2" },
    { "src": "/(manifest\.json)", "dest": "/$1" },
    { "src": "/(favicon\.ico)", "dest": "/$1" },
    { "src": "/(logo192\.png)", "dest": "/$1" },
    { "src": "/(logo512\.png)", "dest": "/$1" },
    { "src": "/(asset-manifest\.json)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
